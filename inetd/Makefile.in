SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
sbindir = @sbindir@
sysconfdir = @sysconfdir@
mandir = @mandir@
man8dir = $(mandir)/man8

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

CFLAGS += $(DEFS) -D_PATH_INETDCONF=\"$(sysconfdir)/inetd.conf\"
LDLIBS = $(LIBS)

all: inetd
inetd: inetd.o

install: installdirs inetd $(srcdir)/inetd.8
	$(INSTALL_PROGRAM) inetd $(sbindir)/inetd
	-$(INSTALL_DATA) $(srcdir)/inetd.8 $(man8dir)/inetd.8
uninstall:
	-$(RM) -f $(sbindir)/inetd $(man8dir)/inetd.8

installdirs:
	@$(SHELL) $(top_srcdir)/mkinstalldirs $(man8dir)

clean mostlyclean:
	$(RM) -f *.o inetd
distclean: clean
	$(RM) -f Makefile
