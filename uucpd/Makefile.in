SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

LDLIBS = $(LIBS)

# the /libexec/uucp/... path is consistent with netbsd.
CFLAGS += $(DEFS) -D_PATH_UUCICO=\"$(libexecdir)/uucp/uucicio\"

uucpd: uucpd.o

install: installdirs uucpd
	$(INSTALL_PROGRAM) uucpd $(libexecdir)/in.uucpd

installdirs:
	$(SHELL) $(top_srcdir)/mkinstalldirs $(libexecdir)

clean:
	$(RM) -f *.o uucpd 
distclean: clean
	$(RM) -f Makefile
