SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@
mandir = @mandir@
man8dir = $(mandir)/man8

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

LDLIBS = $(LIBS)

CFLAGS += $(DEFS)

rshd: rshd.o

install: installdirs rshd $(srcdir)/rshd.8
	$(INSTALL_PROGRAM) rshd $(libexecdir)/in.rshd
	$(INSTALL_DATA) $(srcdir)/rshd.8 $(man8dir)

installdirs:
	$(SHELL) $(top_srcdir)/mkinstalldirs $(libdir)

clean:
	$(RM) -f *.o rshd 
distclean: clean
	$(RM) -f Makefile
