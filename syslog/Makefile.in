srcdir = @srcdir@
include ../config.make

all: logger
logger: logger.o

install: installdirs logger $(srcdir)/logger.1
	$(INSTALL_PROGRAM) logger $(bindir)/logger
	-$(INSTALL_DATA) $(srcdir)/logger.1 $(man1dir)/logger.1
uninstall:
	-$(RM) -f $(bindir)/logger $(man1dir)/logger.1

installdirs:
	@$(MKINSTDIRS) $(bindir) $(man1dir)

clean mostlyclean:
	$(RM) -f *.o logger 
distclean: clean
	$(RM) -f Makefile
