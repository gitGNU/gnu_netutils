SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@
mandir = @mandir@
man8dir = $(mandir)/man8

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
YACC = @YACC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

CFLAGS += $(DEFS)
LDLIBS = $(LIBS)

all: talkd
talkd: talkd.o announce.o process.o talbe.o print.o ttymsg.o

install: installdirs talkd $(srcdir)/talkd.8
	$(INSTALL_PROGRAM) talkd $(libexecdir)/in.talkd
	-$(INSTALL_DATA) $(srcdir)/talkd.8 $(man8dir)/talkd.8
uninstall:
	-$(RM) -f $(libexecdir)/in.talkd $(man8dir)/talkd.8

installdirs:
	@$(SHELL) $(top_srcdir)/mkinstalldirs $(man8dir)

clean mostlyclean:
	$(RM) -f *.o talkd
distclean: clean
	$(RM) -f Makefile
