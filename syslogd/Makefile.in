srcdir = @srcdir@
include ../config.make

INSTALL_TARGETS= \
  $(libexecdir)/in.syslogd $(man5dir)/syslog.conf.5 $(man8dir)/syslogd.8

CPPFLAGS += \
	-D_PATH_KLOG=\"/dev/klog\" \
	-D_PATH_LOGCONF=\"$(sysconfdir)/syslog.conf\" \
	-D_PATH_LOGPID=\"$(localstatedir)/run/syslog.pid\"

all: syslogd
syslogd: syslogd.o ttymsg.o

ttymsg.o: $(top_srcdir)/common/ttymsg.c
	$(COMPILE.c) $<

clean:
	$(RM) -f *.o syslogd

include $(RULES)
