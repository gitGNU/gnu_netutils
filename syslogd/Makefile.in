srcdir = @srcdir@
include ../config.make

CPPFLAGS += \
	-D_PATH_SYSLOGUSERS=\"$(sysconfdir)/syslogusers\" \
        -D_PATH_SYSLOGWELCOME=\"$(sysconfdir)/syslogwelcome\" \
	-D_PATH_SYSLOGLOGINMESG=\"$(sysconfdir)/motd\" \
	-D_PATH_NOLOGIN=\"$(sysconfdir)/nologin\"

all: syslogd
syslogd: syslogd.o syslogcmd.o logwtmp.o popen.o

install: installdirs syslogd $(srcdir)/syslogd.8
	$(INSTALL_PROGRAM) syslogd $(libexecdir)/in.syslogd
	-$(INSTALL_DATA) $(srcdir)/syslogd.conf.5 $(man5dir)/syslogd.conf.5
	-$(INSTALL_DATA) $(srcdir)/syslogd.8 $(man8dir)/syslogd.8
uninstall:
	-$(RM) -f $(libexecdir)/in.syslogd $(man8dir)/syslogd.8

installdirs:
	@$(MKINSTDIRS) $(libexecdir) $(man5dir) $(man8dir)

clean mostlyclean:
	$(RM) -f *.o syslogd
distclean: clean
	$(RM) -f Makefile
