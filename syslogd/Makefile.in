srcdir = @srcdir@
include ../config.make

INSTALL_TARGETS = \
  $(sbindir)/syslogd $(man5dir)/syslog.conf.5 $(man8dir)/syslogd.8
SRCS = syslogd.c
DISTFILES = $(SRCS) syslogd.8 syslog.conf.5 Makefile.in

CPPFLAGS += \
	-D_PATH_LOGCONF=\"$(sysconfdir)/syslog.conf\" \
	-D_PATH_LOGPID=\"$(localstatedir)/run/syslog.pid\"

all: syslogd
syslogd: $(SRCS:.c=.o) ttymsg.o

clean:
	$(RM) -f *.o syslogd

include $(RULES)
