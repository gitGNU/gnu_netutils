srcdir = @srcdir@
top_srcdir = @top_srcdir@
include ../config.make

DISTFILES = syslogd.c syslogd.8 syslog.conf.5

INSTALL_TARGETS = \
  $(sbindir)/syslogd $(man5dir)/syslog.conf.5 $(man8dir)/syslogd.8
CLEAN = syslogd syslogd.o

CPPFLAGS += $(PATHDEF_LOGCONF) $(PATHDEF_LOGPID) $(PATHDEF_CONSOLE) \
	$(PATHDEF_KLOG) $(PATHDEF_UTMP) $(PATHDEF_LOG)

all: syslogd

include $(RULES)
