SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@
mandir = @mandir@
man8dir = $(mandir)/man8

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

CFLAGS += $(DEFS) -I$(top_srcdir)/tftp
LDLIBS = $(LIBS)

all: tftpd
tftpd: tftpd.o tftpsubs.o

tftpsubs.o: $(top_srcdir)/tftp/tftpsubs.c
	$(CC) -c $(CFLAGS) $<

install: installdirs tftpd $(srcdir)/tftpd.8
	$(INSTALL_PROGRAM) tftpd $(libexecdir)/in.tftpd
	-$(INSTALL_DATA) $(srcdir)/tftpd.8 $(man8dir)/tftpd.8
uninstall:
	-$(RM) -f $(libexecdir)/in.tftpd $(man8dir)/tftpd.8

installdirs:
	@$(SHELL) $(top_srcdir)/mkinstalldirs $(libexecdir) $(man8dir)

clean mostlyclean:
	$(RM) -f *.o tftpd 
distclean: clean
	$(RM) -f Makefile
