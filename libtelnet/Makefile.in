SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
AR = @AR@
RANLIB = @RANLIB@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

OBJS = auth.o encrypt.o genget.o getent.o misc.o kerberos.o enc_des.o kerberos5.o

CFLAGS += $(DEFS)

libtelnet.a: $(OBJS)
	$(AR) rcv $@ $(OBJS)
	$(RANLIB) $@

install: installdirs libtelnet.a
	$(INSTALL_DATA) libtelnet.a $(libdir)

installdirs:
	$(SHELL) $(top_srcdir)/mkinstalldirs $(libdir)

clean:
	$(RM) -f *.o libtelnet.a
distclean: clean
	$(RM) -f Makefile
