SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
libexecdir = @libexecdir@
includedir = @includedir@
mandir = @mandir@
man1dir = $(mandir)/man1
man8dir = $(mandir)/man8
man5dir = $(mandir)/man5

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
AR = @AR@
RANLIB = @RANLIB@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

LIBTELNET_FLAGS = -DISSUE_FILE=\"$(prefix)/etc/issue.net\" \
	-DKLUDGELINEMODE -DDIAGNOSTICS \
	-DAUTHENTICATE

# header files to install
IHDRS = auth.h auth-proto.h misc.h misc-proto.h

OBJS =  auth.o enc_des.o encrypt.o genget.o getent.o \
        kerberos.o kerberos5.o misc.o

CFLAGS += $(LIBTELNET_FLAGS) @DEFS@

libtelnet.a: $(OBJS)
	$(AR) rcv $@ $(OBJS)
	$(RANLIB) $@

install: installdirs libtelnet.a
	$(INSTALL_DATA) libtelnet.a $(libdir)
	for H in $(IHDRS); do \
	    $(INSTALL_DATA) $(srcdir)/$$H $(includedir)/libtelnet; \
	done

installdirs:
	$(SHELL) ${srcdir}/mkinstalldirs $(libdir) $(includedir)/libtelnet

clean:
	$(RM) -f *.o libtelnet.a

distclean: clean
	$(RM) -f Makefile
