SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
libexecdir = @libexecdir@
mandir = @mandir@
man1dir = $(mandir)/man1
man8dir = $(mandir)/man8
man5dir = $(mandir)/man5

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

TELNETD_FLAGS = -DISSUE_FILE=\"$(prefix)/etc/issue.net\" \
	-DKLUDGELINEMODE -DDIAGNOSTICS \
	-DAUTHENTICATE
LDLIBS = -ltermcap -ltelnet

CFLAGS += $(TELNETD_FLAGS) @DEFS@

telnetd: telnetd.o state.o termstat.o slc.o sys_term.o utility.o \
		global.o authenc.o logwtmp.o

install: telnetd
	$(INSTALL_PROGRAM) telnetd $(libexecdir)/in.telnetd
	$(INSTALL_DATA) $(srcdir)/telnetd.8 $(man8dir)
	$(INSTALL_DATA) $(srcdir)/in.telnetd.8 $(man8dir)
	$(INSTALL_DATA) $(srcdir)/issue.net.5 $(man5dir)

clean:
	$(RM) -f *.o telnetd 
distclean: clean
	$(RM) -f Makefile
