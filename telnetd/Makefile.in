SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@
mandir = @mandir@
man8dir = $(mandir)/man8

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

OPTION_FLAGS = -DLINEMODE -DKLUDGELINEMODE -DDIAGNOSTICS -DENV_HACK -DOLD_ENVIRON
LDLIBS = -L../libtelnet -ltelnet -ltermcap $(LIBS)

CFLAGS += $(OPTION_FLAGS) $(DEFS)

telnetd: authenc.o global.o slc.o state.o sys_term.o telnetd.o termstat.o \
	utility.o

install: installdirs telnetd $(srcdir)/telnetd.8
	$(INSTALL_PROGRAM) telnetd $(libexecdir)/in.telnetd
	$(INSTALL_DATA) $(srcdir)/telnetd.8 $(man8dir)

installdirs:
	$(SHELL) $(top_srcdir)/mkinstalldirs $(libdir)

clean:
	$(RM) -f *.o telnetd 
distclean: clean
	$(RM) -f Makefile
