srcdir = @srcdir@
include ../config.make

INSTALL_TARGETS = $(libexecdir)/in.ftpd $(man8dir)/ftpd.8
SRCS = ftpd.c ftpcmd.c logwtmp.c popen.c
DISTFILES = $(SRCS) ftpd.8 Makefile.in

CPPFLAGS += \
	-D_PATH_FTPUSERS=\"$(sysconfdir)/ftpusers\" \
        -D_PATH_FTPWELCOME=\"$(sysconfdir)/ftpwelcome\" \
	-D_PATH_FTPLOGINMESG=\"$(sysconfdir)/motd\" \
	-D_PATH_NOLOGIN=\"$(sysconfdir)/nologin\"

all: ftpd
ftpd: $(SRCS:.c=.o)

clean:
	$(RM) -f *.o ftpd

include $(RULES)
