SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
libexecdir = @libexecdir@
sysconfdir = @sysconfdir@
localstatedir = @localstatedir@
mandir = @mandir@
man8dir = $(mandir)/man8

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
YACC = @YACC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

CFLAGS += $(DEFS) \
	-D_PATH_FTPUSERS=\"$(sysconfdir)/ftpusers\" \
        -D_PATH_FTPWELCOME=\"$(sysconfdir)/ftpwelcome\" \
	-D_PATH_FTPLOGINMESG=\"$(sysconfdir)/motd\" \
	-D_PATH_NOLOGIN=\"$(sysconfdir)/nologin\"
LDLIBS = $(LIBS)

all: ftpd
ftpd: ftpd.o ftpcmd.o logwtmp.o popen.o

install: installdirs ftpd $(srcdir)/ftpd.8
	$(INSTALL_PROGRAM) ftpd $(libexecdir)/in.ftpd
	-$(INSTALL_DATA) $(srcdir)/ftpd.8 $(man8dir)/ftpd.8
uninstall:
	-$(RM) -f $(libexecdir)/in.ftpd $(man8dir)/ftpd.8

installdirs:
	@$(SHELL) $(top_srcdir)/mkinstalldirs $(man8dir)

clean mostlyclean:
	$(RM) -f *.o ftpd
distclean: clean
	$(RM) -f Makefile
