SHELL = /bin/sh

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
mandir = @mandir@
man1dir = $(mandir)/man1

INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CC = @CC@
DEFS = @DEFS@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
RM = @RM@

CFLAGS += $(DEFS) -D_PATH_CP=\"$(bindir)/cp\" -D_PATH_RSH=\"$(bindir)/rsh\"
LDLIBS = $(LIBS)

all: rcp
rcp: rcp.o util.o

install: installdirs rcp $(srcdir)/rcp.1
	$(INSTALL_PROGRAM) rcp $(bindir)/rcp
	-$(INSTALL_DATA) $(srcdir)/rcp.1 $(man1dir)/rcp.1
uninstall:
	-$(RM) -f $(bindir)/rcp $(man1dir)/rcp.1

installdirs:
	@$(SHELL) $(top_srcdir)/mkinstalldirs $(bindir) $(man1dir)

clean mostlyclean:
	$(RM) -f *.o rcp 
distclean: clean
	$(RM) -f Makefile
